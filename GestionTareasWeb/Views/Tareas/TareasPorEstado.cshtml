@{
    ViewData["Title"] = "Tareas por Estado";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
else if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

<h2>Pendientes</h2>
@if (ViewBag.TareasPendiente != null && ViewBag.TareasPendiente.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha de Creación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in ViewBag.TareasPendiente)
            {
                <tr>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay tareas pendientes.</p>
}

